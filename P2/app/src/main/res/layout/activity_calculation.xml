<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculationActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/calculation_showed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="0"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:gravity="bottom|right">

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/material_dynamic_primary80"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/calculation_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="0"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="3"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="4"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/material_dynamic_primary80"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/calculation_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="5"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="6"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="7"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="8"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

        <TextView
            android:id="@+id/calculation_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="9"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/material_dynamic_primary80"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/calculation_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="+"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="-"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="50dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_multiple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="x"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>
        <TextView
            android:id="@+id/calculation_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="/"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/material_dynamic_primary80"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/calculation_gotomain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="Main page"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

        <TextView
            android:id="@+id/calculation_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="AC"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            >

        </TextView>

        <TextView
            android:id="@+id/calculation_equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculation_button"
            android:layout_margin="5dp"
            android:text="="
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="30dp"
            >

        </TextView>



    </androidx.appcompat.widget.LinearLayoutCompat>






</androidx.appcompat.widget.LinearLayoutCompat>

