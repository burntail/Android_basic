<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InstaLogin"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/instagram_writing"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/instagram_writing"
        android:layout_marginBottom="143dp">

    </ImageView>

    <EditText
        android:id="@+id/ID_blank"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="ID">

    </EditText>


    <EditText
        android:id="@+id/Password_blank"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Password">

    </EditText>

    <TextView
        android:id="@+id/enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:textColor="#1868e8">


    </TextView>

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="로그인하기"
        android:gravity="center"
        android:background="@color/material_dynamic_tertiary70">


    </TextView>

</androidx.appcompat.widget.LinearLayoutCompat>